<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pokerbackground5"
    tools:context=".LoginPageActivity">

    <Button
        android:id="@+id/viewStats"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="10dp"
        android:text="View Stats"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteUser"
        android:layout_width="145dp"
        android:layout_height="72dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="60dp"
        android:text="Delete User"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playPlayers"
        android:layout_width="312dp"
        android:layout_height="114dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="320dp"
        android:text="Join Multiplayer Lobby"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playBots"
        android:layout_width="312dp"
        android:layout_height="114dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="445dp"
        android:text="Play vs. Bots"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnToLogin"
        android:layout_width="157dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:text="Return to Login"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="139dp"
        android:layout_height="88dp"
        android:background="@color/black"
        android:backgroundTint="@color/material_on_background_disabled"
        android:text="User"
        android:textAlignment="center"
        android:textColor="#F80707"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
