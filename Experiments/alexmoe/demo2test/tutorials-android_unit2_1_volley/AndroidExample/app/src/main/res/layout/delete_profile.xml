<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pokerbackground5"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/userText2"
        android:layout_width="139dp"
        android:layout_height="88dp"
        android:background="@color/black"
        android:backgroundTint="@color/material_on_background_disabled"
        android:text="User"
        android:textAlignment="center"
        android:textColor="#F80707"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="636dp"
        android:text="Menu"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="328dp"
        android:text="Delete Profile"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/enterIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="324dp"
        android:text="Enter Your User ID"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterIDEdit"
        android:layout_width="191dp"
        android:layout_height="38dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="388dp"
        android:width="300sp"
        android:height="40sp"
        android:background="@drawable/edittext_background"
        android:hint="Enter User ID"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>